/* pages/index/map/map.wxss */
page{  
  display: flex;  
  flex-direction: column;  
  height: 100%;  
}  
.img_mylocation{
  width: 30rpx;
  height: 30rpx;
  bottom: 0rpx;
}
.modals{position:fixed; z-index: 999; top:0; left: 0; right:0; bottom: 0;}
.modals-cancel{position:absolute; z-index:1000; top:0; left: 0; right:0; bottom: 0; background-color: rgba(0,0,0,.5);}
.bottom-dialog-body{position:absolute; z-index:10001; bottom:0; left:0; right:0; padding:30rpx; height:250rpx; background-color: #fff;}
/*动画前初始位置*/
.bottom-pos{-webkit-transform:translateY(100%);transform:translateY(100%);}
.btnindex{
margin-top: 5rpx;
margin-bottom: 5rpx; 
margin-left: 5rpx;   
padding: 5rpx;
width: 30%;
text-size-adjust: 10;
border-radius: 5rpx;
position: relative;  
text-align: center;  
line-height: 80rpx;  
font-size:14px;
justify-content: center;
}
.btnview{
  display: flex;
}
.btnindex::after {
  border: 0;
}