/* pages/index/used/used.wxss */
@import "/weui.wxss";
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color:black;
  border-color:  rgb(71, 212, 255);
  border-style: solid;
  border-width: medium;
} 

.location{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: black;
}
.txt{
text-align: center;
font-size: 16px;

}
.xian {
  width: 100%;
  height: 2rpx;
  background: #dcdcdc;
  margin-bottom: 50rpx;
}
.canvas {
    margin: 100rpx auto;
    width: 150px;
    height: 150px; 
    /* border: 1px solid black; */
}

.modal-box{
  position:fixed;
  background:rgba(0,0,0,0.4);
  top:0rpx;
  width:100%;
  height:100%;
  }
.modal-content{
  margin-top:150rpx;
  height:600rpx;
  border-radius: 10rpx;
}
.knowBtn{
  height:100rpx;
  width: 600rpx;
}

.weui-media-box__title {
  font-weight: 400;
  font-size: 24px;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  word-wrap: break-word;
  word-break: break-all;
}

.weui-media-box__desc {
  color: rgb(94, 91, 91);
  font-size: 24px;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.weui-media-box__desc2 {
  color: rgb(0, 0, 0);
  font-size: 24px;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
